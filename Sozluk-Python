print("Merhaba, ben bir sözlüğüm. Bilmediğin kelimelerin anlamlarını söylüyorum. Lütfen doğru yazmaya özen göster!")

for i in range(5):
    word = input("Anlamadığınız bir kelime yazın (hepsini büyük harflerle yazın!): ")

    if word =="LOL":
        print("Komik bir şeye verilen cevap")
    
    if word =="CRINGE":
        print("Garip ya da utandırıcı bir şey")

    if word =="ROFL":
        print("Bir şakaya karşılık cevap")

    if word =="SHEESH":
        print("Onaylamamak")

    if word =="CREEPY":
        print("Korkunç")

    if word =="AGGRO":
        print("Agresifleşmek/sinirlenmek")
